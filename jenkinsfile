pipeline {
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('Build Docker Image'){
            steps{
                sh "docker build . -t mdrajibkhan/nodeapp:${DOCKER_TAG} "
            }
        }
		stage('Push Image to Docker Hub'){
			steps{
				withCredentials([string(credentialsId: 'dockerhubPWD', variable: 'dockerhubPWD')]) {
					sh "docker login -u mdrajibkhan -p ${dockerhubPWD}"
					sh "docker push mdrajibkhan/nodeapp:${DOCKER_TAG}"
				}
			}
		}
		stage('Login to minikube server'){
			steps{
				sshagent(['login-to-minikube']) {
				    sh "scp -o StrictHostKeyChecking=no services.yml node-app-pod.yml ubuntu@192.168.0.120:/home/ubuntu/"
				}
			}
		}
   }
}
def getDockerTag(){
    def tag  = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}
